<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin>
    
    <general>
        <name><![CDATA[SEO Check]]></name>
        <descriptions>
            <!-- multiple <description> entries allowed, an entry with lang="en_US" must be specified -->
            <description lang="en_US"><![CDATA[Checks single pages for their seo level]]></description>
            <description lang="de_DE"><![CDATA[Prüft einzelnen Seiten (Artikel) auf ihr Suchmaschinen-Optimierungslevel]]></description>
        </descriptions>
        <tags>
            <!-- multiple <tag> entries allowed -->
            <tag><![CDATA[seo]]></tag>
            <tag><![CDATA[check]]></tag>
        </tags>
        <author><![CDATA[René Mansveld]]></author>
        <version><![CDATA[1.0.0]]></version>
        <copyright><![CDATA[Spider IT Deutschland]]></copyright>
        <mail><![CDATA[Info@Spider-IT.de]]></mail>
        <website><![CDATA[http://www.Spider-IT.de]]></website>
    </general>
    
    <requirements>
        <php><![CDATA[5.4.0]]></php>
        <drugcms><![CDATA[2.0.6]]></drugcms>
    </requirements>
    
    <drugcms> <!-- this section contains the db table entries -->
        
        <areas>
            <!-- multiple <area> entries allowed -->
            <area>
                <parent><![CDATA[con]]></parent>
                <name><![CDATA[con_seocheck]]></name>
                <relevant><![CDATA[1]]></relevant>
                <online><![CDATA[1]]></online>
                <menuless><![CDATA[0]]></menuless>
            </area>
            
        </areas>
        
        <files>
            <!-- multiple <file> entries allowed -->
            <file>
                <area><![CDATA[1]]></area>
                <filename><![CDATA[seocheck/includes/include.right_bottom.php]]></filename>
                <filetype><![CDATA[main]]></filetype>
            </file>
            
        </files>
        
        <frame_files>
            <!-- multiple <frame_file> entries allowed -->
            <frame_file>
                <area><![CDATA[1]]></area>
                <frame_id><![CDATA[4]]></frame_id>
                <file><![CDATA[1]]></file>
            </frame_file>
            
        </frame_files>
        
        <nav_subs>
            <!-- multiple <nav_sub> entries allowed -->
            <nav_sub>
                <nav_main><![CDATA[0]]></nav_main>
                <area><![CDATA[1]]></area>
                <level><![CDATA[1]]></level>
                <location><![CDATA[seocheck/xml/;navigation/content/article/seocheck]]></location>
                <online><![CDATA[1]]></online>
            </nav_sub>
            
        </nav_subs>
        
    </drugcms>
    
</plugin>